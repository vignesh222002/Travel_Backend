// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model States {
  id     Int      @id @default(autoincrement())
  state  String
  places Places[]
}

model Places {
  id                 Int             @id @default(autoincrement())
  place              String
  state_id           Int
  landscape          String
  is_visited         Boolean         @default(false)
  is_oneday_trip     Boolean         @default(false)
  stay_option        String?
  best_time_to_visit String?
  spots              Spots[]
  nearest_place_ref  Nearest_place?  @relation("place_id")
  state              States          @relation(fields: [state_id], references: [id])
}

model Spots {
  id              Int     @id @default(autoincrement())
  spot            String
  place_id        Int
  category        String
  description     String?
  timing          String
  season          String
  google_location String?
  must_visit      Boolean @default(false)
  place_ref       Places  @relation(fields: [place_id], references: [id])
}

model Nearest_place {
  id                      Int    @id @default(autoincrement())
  place_id                Int    @unique
  nearest_place           String
  place_id_ref            Places @relation(fields: [place_id], references: [id], name: "place_id", onDelete: Cascade)
}